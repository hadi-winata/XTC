<% provide(:title, 'Daftar') %>

<div class="container">
   <div class="row-fluid">
      <div class="span12">
         
         <div class="row-fluid">
            <div class="span3">
            </div>

            <div class="span6" id="signup">
               <h2>Daftar</h2>

               <%= form_for(@user) do |f| %>
               <% flash.each do |key, value| %>
               <%= content_tag(:div, value, class: "alert alert-#{key}") %>
               <% end %>
               
               <%= render 'shared/error_messages', object: f.object %>
               
               <%= render 'fields', f: f %>
               <%= f.submit "Daftar", class: "btn btn-primary btn-block", "data-no-turbolink" => true %>
               <% end %>
            </div>

            <div class="span3">
            </div>
         </div>
      </div>
   </div>
</div>